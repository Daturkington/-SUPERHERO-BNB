<div class="container-index">
  <h1>Build your team!</h1>

  <form action="/supers" accept-charset="UTF-8" method="get">
    <div class="d-flex w-25">
      <input type="text" name="query" id="query" class="form-control-search" placeholder="Find your Superhero or Villain!">
      <input type="submit" name="commit" value="Search" class="btn-super-search" data-disable-with="Search">
    </div>
  </form>

  <div class="cards">
    <% @supers.each do |superhero| %>
      <% if superhero.photo.attached? %>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path superhero.photo.key %>')">
          <div>
            <p class="speech"><%= superhero.quote %></p>
          </div>
          <div class="link-box">
            <%= link_to super_path(superhero.id) do %>
              <h2><%= superhero.name %></h2>
            <% end %>
          </div>

          <%= link_to like_super_path(superhero), remote: true, class: "like", method: :put do %>
          <button type="button" class="btn btn-info" aria-label="Left Align">
            <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
            <span class="badge" id="superhero-<%= superhero.id %>"><%= superhero.get_upvotes.size %></span>
          </button>
        <% end %>
        </div>

      <% else %>
        <div class="card-category">
          <div>
            <p class="speech"><%= superhero.quote %></p>
          </div>
          <div class="link-box">
            <%= link_to super_path(superhero.id) do %>
              <h2><%= superhero.name %></h2>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

