<div class="container-index">
  <div class="cards">

      <% @supers.each do |superhero| %>

          <% if superhero.photo.attached? %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path superhero.photo.key %>')">
              <div class="card-description">
                <h2 class="title-box"><%= superhero.name %></h2>
              </div>
              <div class="link-box">
                <%= link_to "Show Super", super_path(superhero.id), class: 'card-link' %>
              </div>
                 <% else %>
               <div class="card-category">
                <div class="card-description">
                <h2 class="title-box"><%= superhero.name %></h2>
              </div>
              <div class="link-box">
                <%= link_to "Show Super", super_path(superhero.id), class: 'card-link' %>
              </div>
              </div>
            <% end %>
            <%= link_to like_super_path(superhero), class: "like", method: :put do %>
              <button type="button" class="btn btn-info" aria-label="Left Align">
                <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
                <span class="badge"><%= superhero.get_upvotes.size %></span>
                </button>
            <% end %>
          <% end %>
         </div>
       <% end %>
     <% end %>
  </div>
</div>
