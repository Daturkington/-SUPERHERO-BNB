<div class="container">
  <div class="container-super-image">
  <%= cl_image_tag @super.photo.key, width: 400, height: 500, crop: :fill %>
    <div>
      <% if @super.user == current_user %>
      <%= link_to 'Edit', edit_super_path(@super), class: "btn btn-super-edits" %>
      <%= link_to 'Delete', super_path(@super), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-super-edits" %>
    <% end %>
    </div>
  </div>
  <div class="container-super-card">
    <div class="container-super-infos">
      <h1> <%= @super.name %></h1>
      <p><%= @super.location %></p>
      <% if @super.good == true %>
        <p>Hero</p>
      <% else %>
        <p>Villain</p>
      <% end %>
      <p class="super-description-box"><%= @super.description %></p>
      <%= link_to 'Add to Team', new_super_booking_path(@super), class: "btn btn-primary" %>
      <%= link_to 'Back', supers_path, class: "btn btn-primary"%>
    </div>
  </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'bookings/booking_form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
